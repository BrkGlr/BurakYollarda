@model List<SubCategoryViewModel>



	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom px-5">

		<div><h2>ALT KATEGORİLER</h2></div>
		<div><a asp-area="admin" asp-controller="SubCategory" asp-action="new" class="btn btn-primary">Yeni Alt Kategori Ekle</a></div>
	</div>




	<div class="mt-3 px-5">

		<table id="SubCategoryTable" class="table table-striped table-bordered">
			<thead>
				<tr>
					<th style="width:25px">No</th>
					<th>Kategori Adı</th>

					<th>Alt Kategori Adı</th>
					<th style="width:134px"></th>
				</tr>
			</thead>
			<tbody>
				@if (Model.Any())
				{
				var sayac = 1;
				@foreach (var subCategory in Model)
					{

						<tr>
							<td>@sayac</td>
							<td>@subCategory.CategoryName</td>
							<td>@subCategory.Name</td>
							<td>
								<a asp-area="admin" asp-controller="subcategory" asp-action="edit" asp-route-id="@subCategory.Id" class="btn btn-primary">Düzenle</a>
								<a asp-area="admin" asp-controller="subcategory" asp-action="delete" asp-route-id="@subCategory.Id" class="btn btn-danger">Sil</a>
							</td>

					</tr>
					sayac++;
				}

				}
			</tbody>
			<tfoot>

				<tr>
					<th>No</th>
					<th>Kategori Adı</th>
					<th>Alt Kategori Adı</th>
					
					<th></th>
				</tr>

			</tfoot>

		</table>

	</div>





@section Scripts {
	<script>
		$(document).ready(function() {
			$('#SubCategoryTable').DataTable(
				{
					pageLength: 5,
					language: {
						url: '//cdn.datatables.net/plug-ins/1.12.1/i18n/tr.json'
                    },
					columnDefs: [{ orderable: false, targets: 3}]
				}


			);
		});
	</script>
			}